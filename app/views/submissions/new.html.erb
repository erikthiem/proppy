<%= form_for @submission do |f| %>

    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">

            <h2><%= @submission.game.title.upcase %></h2>

            <div class="row clearfix">
              <div class="col-sm-12">

                <% @submission.game.questions.each do |question| %>
                  <h4><%= question.title %></h4>
                  <div class="form-group">
                    <div class='btn-group styled-select slate'>
                      <%= f.select(:answers, [[question.response1, '1'], [question.response2, '2']], {}, { :class => 'btn dropdown-toggle btn-default', :name => 'submission[answers][]' }) %>
                    </div>
                  </div>
                <% end %>

                <h4>Your Name</h4>
                <div class="form-group">
                  <%= f.text_field :name, class:"form-control", placeholder:"Tasty Wilikers" %>
                </div>

                <div class="form-group">
                  <%= f.hidden_field :code, class:"form-control", placeholder:"Game Code", value:@code %>
                </div>

                <div class="form-group">
                  <%= f.submit 'Submit', class:"btn btn-primary m-t-15 waves-effect" %>
                </div>

              </div>
            </div>

        </div>
      </div>
    </div>
<% end %>
