
<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :game_title %>
  </div>

  <div class="field questions">
    <% @questions.each_with_index do |question, i| %>
      <label for="game_question_<%= i + 1 %>">Question <%= i+1 %></label>
      <input class="question" id="game_question_<%= i + 1 %>" name="game[question_<%= i + 1 %>]" type="text" Value="<%= question.title %>">

      <label for="game_question_<%= i + 1 %>_response_1">Response 1</label>
      <input id="game_question_<%= i + 1 %>_response_1" name="game[question_<%= i + 1 %>_response_1]" type="text" Value="<%= question.response1 %>">

      <label for="game_question_<%= i + 1 %>_response_2">Response 2</label>
      <input id="game_question_<%= i + 1 %>_response_2" name="game[question_<%= i + 1 %>_response_2]" type="text" Value="<%= question.response2 %>">

    <% end %>
  </div>

  <%= button_tag "Add Question", :type => "button", :id => "addQuestion" %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
