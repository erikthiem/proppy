
<h1>Select your Game!</h1>
<div class="row">
  <div class="col-lg-6">

    <form action="/games" id="searchBar" method="post">
      <!-- Add pre created game -->
      <%= render 'proppy_nba_finals_2017_game2' %>
      <!-- Add authenticity token to form -->
      <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
      <input type="submit" value="NBA Finals 2017" class="questions nba img-rounded">
    </form>
  </div>

  <div class="col-lg-6">
    <%= button_to 'Custom Questions', new_game_path, method: :get, class:"questions cst img-rounded", type:"button" %>
  </div>

</div>

